# Exemplo de arquivo de configuração de ambiente
# Copie este arquivo para .env e preencha com seus valores reais

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Estudos Arquitetura Software API

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@example.com

# Gurobi Configuration (for optimization project)
GUROBI_HOME=/opt/gurobi/linux64
GRB_LICENSE_FILE=/opt/gurobi/gurobi.lic

# Development
DEBUG=True
LOG_LEVEL=INFO
